{
  "name": "@byline/core",
  "private": false,
  "license": "AGPL",
  "version": "0.1.0",
  "description": "Byline CMS core package",
  "keywords": [
    "cms",
    "headless cms",
    "content management"
  ],
  "homepage": "https://github.com/Byline-CMS/bylinecms.dev",
  "bugs": {
    "url": "https://github.com/Byline-CMS/bylinecms.dev/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Byline-CMS/bylinecms.dev.git",
    "directory": "packages/byline"
  },
  "type": "module",
  "main": "dist/index.js",
  "index": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "chokidar 'src/**/*' -c 'npm-run-all build'",
    "build": "tsc -p tsconfig.json && tsc-alias",
    "clean": "rimraf node_modules dist build .turbo",
    "lint": "biome check --write --unsafe --diagnostic-level=error",
    "skip": "tsx ./scripts/task-watch.js",
    "test": "LOG_LEVEL=off tsx --test $(find . -name \"*.test.ts\")",
    "test:one": "LOG_LEVEL=off tsx --no-warnings --test"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./zod-schemas": {
      "types": "./dist/schemas/zod/index.d.ts",
      "import": "./dist/schemas/zod/index.js",
      "require": "./dist/schemas/zod/index.js"
    },
    "./patches": {
      "types": "./dist/patches/index.d.ts",
      "import": "./dist/patches/index.js",
      "require": "./dist/patches/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@byline/shared": "workspace:*",
    "jose": "^6.1.3",
    "npm-run-all": "^4.1.5",
    "uuid": "^13.0.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@types/node": "^24.10.1",
    "chokidar": "^5.0.0",
    "chokidar-cli": "^3.0.0",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.21.0",
    "typescript": "5.9.3",
    "vitest": "^4.0.15"
  },
  "publishConfig": {
    "access": "public",
    "exports": {
      ".": {
        "types": "./dist/index.d.ts",
        "import": "./dist/index.js",
        "require": "./dist/index.js"
      },
      "./zod-schemas": {
        "types": "./dist/schemas/zod/index.d.ts",
        "import": "./dist/schemas/zod/index.js",
        "require": "./dist/schemas/zod/index.js"
      },
      "./package.json": "./package.json"
    },
    "main": "dist/index.js",
    "index": "dist/index.js",
    "types": "dist/index.d.ts",
    "registry": "https://registry.npmjs.org/"
  }
}
